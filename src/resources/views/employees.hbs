
<head>
  <meta charset="UTF-8" />
  <title>People</title>

  <style>
    body {
      background: #f6f7fb;
    }

    .page-container {
      background: #fff;
      border-radius: 10px;
      padding: 20px;
    }

    .btn-purple {
      background: #4b2cc5;
      color: #fff;
    }

    .btn-purple:hover {
      background: #3f24aa;
      color: #fff;
    }

    .avatar {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background: #e5e7eb;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
    }

    .avatar img {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
    }

    .name-link {
      font-weight: 600;
      color: #4b2cc5;
      text-decoration: none;
    }

    .name-link:hover {
      text-decoration: underline;
    }

    .status-red {
      color: #dc2626;
      font-size: 13px;
    }

    .pay-rate {
      font-size: 13px;
      line-height: 1.6;
    }

    .ellipsis {
      cursor: pointer;
      font-size: 20px;
      color: #6b7280;
    }

    .table th {
      font-size: 13px;
      color: #374151;
      font-weight: 600;
    }

    .table td {
      vertical-align: middle;
    }

        .status {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    font-weight: 500;
    }

    /* D·∫•u ch·∫•m */
    .status::before {
    content: "";
    width: 8px;
    height: 8px;
    border-radius: 50%;
    display: inline-block;
    }

    /* Ho·∫°t ƒë·ªông ‚Äì Xanh l√° */
    .status-active {
    color: #16a34a;
    }
    .status-active::before {
    background: #16a34a;
    }

    /* B·∫≠n ‚Äì Cam */
    .status-busy {
    color: #f97316;
    }
    .status-busy::before {
    background: #f97316;
    }

    /* Ngh·ªâ ‚Äì ƒê·ªè */
    .status-off {
    color: #dc2626;
    }
    .status-off::before {
    background: #dc2626;
    }

  </style>
</head>
<body>

<div class="container-fluid p-4">

  <div class="page-container">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-2">
      <h4 class="mb-0">People</h4>

     <button 
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#addPeopleModal"
        >
        ‚ûï Add People
    </button>

    </div>

    <div class="text-muted mb-3">
      Showing 2 out of 2 users
    </div>

    <!-- Toolbar -->
    <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
      <input type="text" class="form-control w-auto" placeholder="Search">

      <button class="btn btn-purple">Search</button>

      <button class="btn btn-outline-secondary">
        Filters (1)
      </button>

      <button class="btn btn-outline-secondary">
        Display
      </button>

      <button class="btn btn-outline-secondary">
        Bulk actions
      </button>

      <button class="btn btn-link text-decoration-none">
        Clear
      </button>

      <div class="ms-auto d-flex align-items-center gap-2">
        <button class="btn btn-outline-secondary btn-sm">
          <i class="bi bi-chevron-left"></i>
        </button>
        <span>Page 1</span>
        <button class="btn btn-outline-secondary btn-sm">
          <i class="bi bi-chevron-right"></i>
        </button>
      </div>
    </div>

    <!-- Table -->
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th><input type="checkbox"></th>
            <th>Name</th>
            <th>Access</th>
            <th>Max-time Working</th>
            <th>Pay Rates</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
        {{#each userss}}
          <!-- Row 1 -->
          <tr>
            <td><input type="checkbox"></td>
            <td>
              <div class="d-flex align-items-center gap-2">
                <div class="avatar">
                  <img src="https://i.pravatar.cc/40?img=3">
                </div>
                <div>
                  <a href="#" class="name-link">{{this.name}}</a>
                </div>
              </div>
            </td>
            <td>{{this.position}}</td>
            <td>{{this.maxtime}}</td>
            <td class="pay-rate">
              Weekday: ‡∏ø 20.00<br>
              Saturday: ‡∏ø 25.00<br>
              Sunday: ‡∏ø 30.00<br>
              Public Holiday: ‡∏ø 50.00
            </td>
            <td>
                <span class="status {{ this.trangthai}}">
                {{this.trangthai}}
                </span>            
            <td class="text-end">
              <div class="dropdown">
                <button
                  class="btn btn-light btn-sm"
                  type="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  &#8942;
                </button>

                <ul class="dropdown-menu dropdown-menu-end">
                  <li>
                    <a class="dropdown-item" href="/users/{{this._id}}">
                      üëÅ View
                    </a>
                  </li>

                  <li>
                    <button
                      class="dropdown-item btn-edit"
                      data-id="{{this._id}}"
                      data-name="{{this.name}}"
                      data-position="{{this.position}}"
                      data-maxtime="{{this.maxtime}}"
                    >
                      ‚úè Edit employee
                    </button>
                  </li>

                  <li>
                    <button
                      class="dropdown-item text-danger btn-delete"
                      data-id="{{this._id}}"
                      data-bs-toggle="modal" data-bs-target="#deleteEmployeeModal"
                    >
                      üóë Delete employee
                    </button>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
        {{/each}}

        </tbody>
      </table>
    </div>


    <form method="POST" id="formDelete"></form>
    <!-- Modal + form -->
    <div class="modal fade" id="addPeopleModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

            <!-- Header -->
            <div class="modal-header">
                <h5 class="modal-title">Add New People</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Body -->
            <form id="addPeopleForm" method="post" action="/employee/store">
                <div class="modal-body">

                <!-- Name -->
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input 
                    type="text"
                    class="form-control"
                    name="name"
                    placeholder="Enter full name"
                    required
                    >
                </div>

                <!-- Position -->
                <div class="mb-3">
                    <label class="form-label">Position</label>
                    <input 
                    type="text"
                    class="form-control"
                    name="position"
                    placeholder="Ex: Developer, Manager"
                    required
                    >
                </div>

                <!-- Max-time working -->
                <div class="mb-3">
                    <label class="form-label">Max-time working (hours)</label>
                    <input 
                    type="number"
                    class="form-control"
                    name="maxtime"
                    min="1"
                    max="24"
                    placeholder="Ex: 8"
                    required    
                    >
                </div>

                </div>

                <!-- Footer -->
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="submit" class="btn btn-success">
                    Save
                </button>
                </div>
            </form>

            </div>
        </div>
    </div>
    <div class="modal fade" id="editEmployeeModal" tabindex="-1">
      <div class="modal-dialog">
        <form method="POST" id="editEmployeeForm" class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit employee</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>

          <div class="modal-body">
            <div class="mb-3">
              <label class="form-label">Name</label>
              <input type="text" class="form-control" name="name" id="editName" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Position</label>
              <input type="text" class="form-control" name="position" id="editPosition" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Max-time working</label>
              <select class="form-select" name="max_time_working" id="editMaxTime" required>
                <option value="4">4 hours</option>
                <option value="6">6 hours</option>
                <option value="8">8 hours</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
              Cancel
            </button>
            <button type="submit" class="btn btn-primary">
              Save changes
            </button>
          </div>
        </form>
      </div>
    </div>

  </div>

  {{!-- modal delete --}}
  <div class="modal" tabindex="-1" id="deleteEmployeeModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Delete Employee</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a t√†i kho·∫£n n√†y kh√¥ng?</p>
        </div>
        <div class="modal-footer">
          <button id="btn-delete-comfirm" type="button" class="btn btn-danger">Delete</button>
          <button  type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
  </div>

</div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const modalEl = document.getElementById('editEmployeeModal')
      const editModal = new bootstrap.Modal(modalEl)
      var idDel 
      
      // edit employee
      document.querySelectorAll('.btn-edit').forEach(btn => {
        btn.addEventListener('click', function () {
          const id = this.dataset.id
          const name = this.dataset.name
          const position = this.dataset.position
          const maxTime = this.dataset.maxtime

          document.getElementById('editName').value = name
          document.getElementById('editPosition').value = position
          document.getElementById('editMaxTime').value = maxTime

          const form = document.getElementById('editEmployeeForm')
          form.action = `/employee/${id}?_method=PUT`

          editModal.show()
        })
      })
      //delete employee
      $('#deleteEmployeeModal').on('show.bs.modal', function(event){
        var buttion = $(event.relatedTarget)
        idDel = buttion.data('id');
      })

      var buttionDel = document.getElementById('btn-delete-comfirm');
      buttionDel.onclick = function(event){
          const formDel = document.getElementById('formDelete')
          formDel.action = '/employee/'+idDel+'?_method=DELETE'      
          formDel.submit()  
      }
    })
   
    
  </script>


</body>




